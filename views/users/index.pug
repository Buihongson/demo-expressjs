extends ../layout/common.pug
        
block content
    h1 Users List

    .d-flex.align-items-center
        a.btn.btn-primary(href="/users/create") New 
    
        form.ml-auto(action="/users/search" , method="GET" , class="d-flex")
            input(class="form-control" , type="text" , name="q" , value=keyWord)
            button(class="btn btn-primary ml-2") Search

    table.table 
        tr
            th Avatar
            th Name
            th Phone
            th Actions

        each user in users 
            tr
                td
                    img(src= user.avatar , width="64" , height="64")
                td= user.name 
                td= user.phone 
                td
                    a.btn.btn-light(href="/users/" + user.id) View 