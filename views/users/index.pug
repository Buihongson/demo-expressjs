extends ../layout/common.pug
        
block content
    h1 Users List

    a(href="/") Home
    a(href="/users/create") New

    form(action="/users/search" , method="GET" , class="d-flex")
        input(class="form-control" , type="text" , name="q" , value=keyWord)
        button(class="btn btn-primary ml-2") Search

    ul  
        each user in users 
            li
                span= user.name 
                span &nbsp; 
                a(href="/users/" + user.id) View 